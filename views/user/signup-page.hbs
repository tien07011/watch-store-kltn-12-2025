<section class="section">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-10">
                <div class="card signup-card">
                    <div class="card-pad">
                        <div class="row align-items-center g-4">
                            <div class="col-md-6 order-2 order-md-1">
                                <h1 class="mb-2">Đăng ký tài khoản</h1>
                                <p class="lead mb-3">Tạo tài khoản để theo dõi đơn hàng và nhận ưu đãi.</p>

                                <form class="signup-form" novalidate>
                                    <div class="form-group">
                                        <label class="form-label" for="Name">Họ và tên</label>
                                        <input type="text" id="Name" class="input" autocomplete="name" />
                                        <span id="Name-err" class="form-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <input type="email" id="emailAddress" class="input" autocomplete="email" />
                                        <span id="Email-err" class="form-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="phoneNumber">Số điện thoại</label>
                                        <input type="text" id="phoneNumber" class="input" inputmode="numeric" autocomplete="tel" />
                                        <span id="Phone-err" class="form-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <div class="stack-sm" style="justify-content: space-between; align-items:center;">
                                            <label class="form-label" for="Password">Mật khẩu</label>
                                            <button type="button" id="togglePw" class="btn btn-outline btn-sm" style="padding:.35rem .6rem;">Hiện/Ẩn</button>
                                        </div>
                                        <div class="input-group">
                                            <input type="password" id="Password" class="input" autocomplete="new-password" />
                                        </div>
                                        <span id="Pass-err" class="form-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="repeatePass">Nhập lại mật khẩu</label>
                                        <input type="password" id="repeatePass" class="input" autocomplete="new-password" />
                                    </div>

                                    <div id="otpinput" class="form-group" style="display:none;">
                                        <p class="form-label">Nhập mã OTP đã gửi tới <strong id="Email-id"></strong></p>
                                        <input id="Otp-input" type="text" class="input" inputmode="numeric" placeholder="Nhập mã OTP" />
                                        <span id="OTP-err" class="form-error"></span>
                                    </div>

                                    <div class="stack-sm mt-2" style="gap:.75rem;">
                                        <button id="gen_btn" class="btn btn-primary" type="button">Gửi mã OTP</button>
                                        <input id="clearBTN" class="btn btn-outline" type="reset" value="Xóa" />
                                        <button id="verify_btn" class="btn btn-secondary" type="button" style="display:none;">Xác minh OTP</button>
                                    </div>
                                    <div class="mt-3">
                                        <a class="ladels" href="/login">← Đã có tài khoản? Đăng nhập</a>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-6 order-1 order-md-2">
                                <img src="/images/signup.png" class="img-fluid" alt="Hình minh họa đăng ký">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
