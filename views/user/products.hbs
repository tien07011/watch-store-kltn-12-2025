<div class="container section" style="display:grid; grid-template-columns: 260px 1fr; gap: 1.25rem;">
    <aside>
        <div class="card card-pad">
            <div class="h5 fw-bold mb-2">Filters</div>
            <div class="mb-2"><a href="/products" class="btn btn-outline" style="width:100%">All Products</a></div>

            <div class="form-group">
                <div class="h6">Category</div>
                <div class="stack-sm" style="flex-direction:column;">
                    {{#each categories}}
                    <label class="stack-sm" style="align-items:center;">
                        <input role="button" class="filter-button" type="checkbox" value="category={{this.cat_name}}" id="category={{this.cat_name}}" />
                        <span>{{this.cat_name}}</span>
                    </label>
                    {{/each}}
                </div>
            </div>

            <div class="form-group">
                <div class="h6">Brand</div>
                <div class="stack-sm" style="flex-direction:column;">
                    {{#each Brands}}
                    <label class="stack-sm" style="align-items:center;">
                        <input role="button" class="filter-brand" type="checkbox" value="brand={{this}}" id="brand={{this}}" />
                        <span>{{this}}</span>
                    </label>
                    {{/each}}
                </div>
            </div>

            <div class="form-group">
                <div class="h6">Color</div>
                <div class="stack-sm" style="flex-direction:column;">
                    {{#each Colors}}
                    <label class="stack-sm" style="align-items:center;">
                        <input role="button" class="filter-color" type="checkbox" value="color={{this}}" id="color={{this}}" />
                        <span>{{this}}</span>
                    </label>
                    {{/each}}
                </div>
            </div>
        </div>
    </aside>

    <main>
        <div class="card card-pad" style="margin-bottom:1rem; display:flex; align-items:center; gap:1rem;">
            <div class="h6" style="margin:0;">Sort:</div>
            <button role="button" onclick="sorting('sort=low-high')" class="btn btn-outline">Price low-high</button>
            <button role="button" onclick="sorting('sort=high-low')" class="btn btn-outline">Price high-low</button>
            <button role="button" onclick="sorting('sort=new-first')" class="btn btn-outline">New First</button>
        </div>

        <div class="product-grid">
            {{#each Products}}
            <div class="product-card">
                <a href="/view_product/{{this._id}}" class="product-media">
                    <img src="/productImages/{{this.primary_image.name}}" alt="{{this.product_name}}" />
                </a>
                <div class="product-body">
                    <div class="product-title">{{this.product_name}}</div>
                    <div class="stack-sm" style="justify-content:space-between;">
                        <span class="muted">{{this.brand_name}}</span>
                        <span class="product-price">â‚¹{{this.selling_price}}</span>
                    </div>
                    <div class="product-actions">
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        <a href="/view_product/{{this._id}}" class="btn btn-outline">View</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </main>
</div>
