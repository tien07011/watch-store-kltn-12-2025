<section class="">
  <div class="container py-2">
    <div class="row d-flex justify-content-center ">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Giỏ hàng - {{cartCount}} sản phẩm</h5>
          </div>
          <div class="card-body">
            {{#each cartList}}
            <!-- Single item -->
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="/productImages/{{this.prod_detail.primary_image.name}}"
                    class="w-100" alt="Ảnh sản phẩm" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <div class="form-check mb-2">
                  <input class="form-check-input cart-item-select" type="checkbox" value="{{this.prod_detail._id}}" data-price="{{this.prod_detail.selling_price}}" data-qty="{{this.cart.quantity}}">
                  <label class="form-check-label">Chọn sản phẩm này</label>
                </div>
                <p><strong>{{this.prod_detail.product_name}}</strong></p>
                <p>Màu sắc: {{this.prod_detail.color}}</p>
                <p>Thương hiệu: {{this.prod_detail.brand_name}}</p>
                <button type="button" class="btn btn-outline btn-sm me-1 mb-2" onclick="removeFromCart('{{this.prod_detail._id}}')" title="Xóa sản phẩm">
                  <i class="fas fa-trash"></i>
                </button>
                {{!-- <button type="button" class="btn btn-outline btn-sm mb-2" title="Thêm vào danh sách yêu thích">
                  <i class="fas fa-heart"></i>
                </button> --}}
                <!-- Data -->
              </div>

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                  <button onclick="decreaseCartQuantity('{{this.prod_detail._id}}')" style="height: 2.5rem;" class="btn btn-outline me-2">
                    <i class="fas fa-minus"></i>
                  </button>

                  <div class="form-outline">
                    <input id="quantityInput-{{this.prod_detail._id}}" min="1" style="width: 4rem;" name="quantity" value="{{this.cart.quantity}}" type="number" readonly class="form-control" />
                    <label class="form-label" for="form1">Số lượng</label>
                  </div>

                  <button style="height: 2.5rem;" class="btn btn-outline ms-2"
                    onclick="increaseCartQuantity('{{this.prod_detail._id}}')">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
                <!-- Quantity -->

                <!-- Price -->
                <p class="text-start text-md-center">
                  <strong>{{formatVND this.prod_detail.selling_price}}</strong>
                </p>
                <!-- Price -->
              </div>
            </div>
            <!-- Single item -->

            <hr class="my-4" />

            {{/each}}

          </div>
        </div>
        
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Tóm tắt</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Đã chọn (<span id="selectedCount">0</span>)
                <span id="selectedTotal">{{formatVND 0}}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Vận chuyển (miễn phí)
                <span>{{formatVND 0}}</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Tổng cộng</strong>
                  <strong>
                    <p class="mb-0">(đã bao gồm thuế)</p>
                  </strong>
                </div>
                <span><strong id="selectedGrandTotal">{{formatVND 0}}</strong></span>
              </li>
            </ul>
            <button id="btnCartCheckout" type="button" class="btn btn-primary btn-lg" style="width:100%;" disabled>
              Tiến hành thanh toán
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="">
  <div class="container py-2">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12">
        <div class="card mb-4">
          <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Gợi ý cho bạn</h5>
            <small class="text-muted">Dựa trên lịch sử mua và giỏ hàng</small>
          </div>
          <div class="card-body">
            <div id="recGrid" class="row" style="row-gap:1rem; column-gap:0.5rem;"></div>
            <div id="recEmpty" class="text-muted" style="display:none;">Chưa có gợi ý phù hợp.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </section>
