{{> admin-header}}
{{> admin-sidebar}}
<div class="admin-container">
  <div class="header">
    <h1>Quản lý tin tức</h1>
    <a class="btn" href="/admin/news/new">+ Thêm tin</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Ảnh</th>
        <th>Tiêu đề</th>
        <th>Trạng thái</th>
        <th>Ngày đăng</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td>{{#if coverImage}}<img src="{{coverImage}}" alt="{{title}}" style="height:48px" />{{/if}}</td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{toDateAndTime publishedAt}}</td>
        <td>
          <a class="btn" href="/admin/news/{{_id}}/edit">Sửa</a>
          <form method="post" action="/admin/news/{{_id}}/delete" style="display:inline">
            <button class="btn btn-danger" type="submit">Xoá</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
