<body>
  {{#if admin}}
  {{>admin-header}}
  {{/if}}

  {{#if user}}
  {{>user-header}}
  {{/if}}

  {{#if success}}
  <div class="alert alert-success m-0">
    <strong>Success!</strong> {{success}}
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-danger m-0">
    <strong>Failed!</strong> {{error}}
  </div>
  {{/if}}

  {{#if fullscreen}}
  {{{body}}}
  {{else}}
  <div class="container section justify-content-between d-flex {{#if Admin}}admin-shell{{/if}}" style="gap: 1rem; align-items: flex-start;">
    {{#if Admin}}
    {{>admin-sidebar}}
    {{/if}}
    {{#if User}}
    {{>user-sidebar}}
    {{/if}}
    <main class="card card-pad" style="flex:1; min-width:0; border:none; box-shadow:none; padding:0;">
      {{{body}}}
    </main>
  </div>
  {{/if}}

  {{#if footer}}
  {{#unless admin}}
  {{>footer}}
  {{/unless}}
  {{/if}}


  <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

