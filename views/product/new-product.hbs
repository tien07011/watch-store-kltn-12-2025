<section style="position: relative;" class="new-product p-md-5">
    <div class="h3 fw-bold text-second px-4">
        <a class="text-second h6" style="text-decoration: none;" href="/admin/products"><i
            class="fa-solid fa-left-long"></i><span>Sản phẩm</span></a>
        <br><span>Thêm sản phẩm</span>
    </div>
    <form id="addProductForm" class="row d-flex justify-content-center">
        <section class="left-secton col-md-6 p-3">

            <div class="card p-md-5 p-2 me-md-5">

                <h5>Chọn ảnh sản phẩm</h5>
                <span class="fw-normal mb-4 text-success">Chỉ hỗ trợ: jpeg, jpg, png, webp</span>
                <span class="fw-bold">Chọn ảnh chính</span>

                <div class="d-flex align-items-center justify-content-center">
                    <img id="prev" class="border my-1 rounded" width="100rem" height="100rem" src="" alt="">
                </div>

                <input id="primaryIMG" type="file" accept=".jpg,.jpeg,.png,.webp,.svg" class="form-control FilUploader" class="mb-3" required />
                <input id="result" type="hidden" name="" value="">
                <span class="fw-bold">Chọn ảnh phụ <br> <span class="fw-normal text-success">Tối đa 3 ảnh</span></span>
                <input type="file" id="image" class="form-control FilUploader" accept=".jpg,.jpeg,.png,.webp,.svg"
                    name="images" class="mb-3" multiple required />

            </div>
            <div class="form-floating my-2 me-md-5">
                <label class="form-label fw-bold" for="form4Example3">Mô tả</label>
                <br>
                <textarea class="form-control mt-4 text-area" rows="5" name="description"
                    style="min-height:150px !important; " required></textarea>
            </div>

        </section>
        <section class="right-section col-md-6  col-md-6 p-4">
            <div class="form-group mb-4">
                <label for="" class="fw-bold mb-2">Tên sản phẩm</label>
                <input type="text" name="product_name" class="form-control" required>
            </div>
            <div class="row mb-2">
                <div class="form-group col-md-6">
                    <label for="" class="fw-bold mb-2">Thương hiệu</label>
                    <input type="text" name="brand_name" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="" class="fw-bold mb-2">Màu sắc</label>
                    <input type="text" name="color" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="" class="fw-bold mb-2">Tồn kho</label>
                    <input type="text" name="stock" class="form-control" required>
                </div>
                <div class="form-group col-md-6 d-flex flex-column">
                    <label for="" class="fw-bold mb-2">Tên danh mục</label>
                    <select class="form-select" name="category" required>
                        {{#each category}}
                        <option value="{{this._id}}">{{this.cat_name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row mb-4">
                <div class="form-group col-md-6">
                    <label for="" class="fw-bold mb-2">Giá gốc</label>
                    <input type="text" name="prod_price" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="" class="fw-bold mb-2">Giá bán</label>
                    <input type="text" name="sellig_price" class="form-control" required>
                </div>
                <div class="form-group mt-2 col-md-6">
                    <label for="" class="fw-bold ">Thuế GST(%)</label>
                    <input type="text" name="GST" class="form-control" required>
                </div>
            </div>
        </section>
        <div class="btn-group">
            <button type="submit" class=" btn add-btn py-3 " style="width:20vw;">Tạo</button>
            <button type="reset" class=" btn button-cancel ms-2 py-3 " style="width:20vw;">Xóa</button>
        </div>

    </form>
    <div style="display: none;" class="crop-product card p-2 shadow " id="crp-container">
        <div class="d-flex flex-column">
            <img src="" id="images" style="object-fit: cover;">
            <button id="cropImageBtn" class="btn btn-primary mt-3">Cắt ảnh</button>
        </div>
    </div>
</section>
<style>
    .crop-product {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 4;
        width: 30rem;

    }

    .error {
        color: rgb(255, 0, 0);
    }
</style>
