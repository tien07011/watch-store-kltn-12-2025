<section style="margin-right: 3rem; width:100vw"  class="category d-flex mt-2">
<div class="object-fit-contain mt-3"> 
  <div class="header d-flex justify-content-between">  
          <h3 class="h3 text-second fw-bold mb-3">Sản phẩm</h3>
          <a href="/admin/products/new-product" class="btn add-btn" style="height:40px;">Thêm sản phẩm</a>
        </div>
  <table style="width: 100vw;" id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Ảnh
      </th>
      <th class="th-sm">Tên sản phẩm
      </th>
      <th class="th-sm">Thương hiệu
      </th>
      <th class="th-sm">Danh mục
      </th>
      <th class="th-sm">Tồn kho
      </th>
      <th class="th-sm">Giá bán
      </th>
      <th class="th-sm">Trạng thái
      </th>
      <th class="th-sm">Xóa/Sửa
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td ><img class="rounded mx-auto d-block" style="width: 4rem;" src="/productImages/{{this.primary_image.name}}" alt=""></td>
      <td>{{this.product_name}}</td>
      <td>{{this.brand_name}}</td>
      <td>{{this.category.cat_name}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.selling_price}}</td>
      {{#if this.status}}
      <td>Đang hiển thị</td>
      {{else}}
      <td>Ẩn</td>
      {{/if}}
      <td>
        {{!-- edit category button --}}
        <a href="/admin/products/edit-product/{{this._id}}" class="ms-3"><i class="fa-solid fa-pen"></i></a>
        <a class="text-danger ms-2"><i style="cursor: pointer;" onclick="deleteAlert('{{this._id}}','{{this.product_name}}')" class="fa-solid fa-trash"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</section>  
